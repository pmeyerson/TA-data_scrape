<dashboard>
  <label>Water Quality Violations</label>
  <row>
    <panel>
      <title>Top Water Providers by Contaminant</title>
      <table>
        <search>
          <query>|inputlookup water_violation_md
|top "PWS Name" by "Contaminant Name"</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Contaminants Flagged</title>
        <search>
          <query>|inputlookup water_violation_md | stats count by "Contaminant Name"
|sort count desc</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="count">40</option>
        <option name="drilldown">cell</option>
      </table>
    </panel>
  </row>
</dashboard>